<% form_for @user do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm password" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :facebook_uid, "Facebook ID" %><br />
    <%= f.text_field :facebook_uid %>
  </p>
  <%- unless @user.new_record? -%>
    <p>
      <%= f.label :active %>
      <%= f.check_box :active %>
    </p>
  <%- end -%>
  <p>
    <%= f.submit "Save Changes", :class => "button small" %> or
    <%= link_to "Cancel", users_path %>
  </p>
<% end %>
